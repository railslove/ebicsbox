#!/bin/bash
/usr/local/bin/bundle exec bin/migrate

if [ "$1" = "server" ]; then
  /usr/local/bin/bundle exec puma config.ru -p $PORT
fi

if [ "$1" = "worker" ]; then
  /usr/local/bin/bundle exec sidekiq -C config/sidekiq.yml -r /usr/ebicsbox/config/sidekiq.rb
fi

if [ "$1" = "all" ]; then
  /usr/bin/supervisord -n -c /etc/supervisor/conf.d/supervisord.conf
fi
exit 1
