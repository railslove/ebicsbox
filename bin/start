#!/bin/bash

/usr/local/bundle/bin/bundle exec bin/migrate

if [ "$1" = "server" ]; then
  /usr/local/bundle/bin/bundle exec bin/update_docs
  /usr/local/bundle/bin/bundle exec trinidad --config config/trinidad.yml
fi

if [ "$1" = "clock" ]; then
  /usr/local/bundle/bin/bundle exec clockwork lib/epics/scheduler/scheduler.rb
fi

if [ "$1" = "worker" ]; then
  /usr/local/bundle/bin/bundle exec bin/worker
fi

exit 1
