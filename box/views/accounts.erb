<table>
<tr>
  <th>Name</th>
  <th>IBAN</th>
  <th>BIC</th>
  <th>Active?</th>
  <th></th>
</tr>
<% @accounts.each do |account| %>
<tr>
  <td><%= account.name %> </td>
  <td><%= account.iban %></td>
  <td><%= account.bic %></td>
  <td>
    <% if account.active? %>
      <%= account.active? %>
    <% elsif account.ini_letter %>
      <form style="display:initial;" action="/admin/accounts/activate/<%= account.id %>" method="post">
        <input type="submit" value="Activate" />
      </form>
    <% else %>
      <form style="display:initial;" action="/admin/accounts/setup/<%= account.id %>" method="post">
        <input type="submit" value="Setup" />
      </form>
    <% end %>
    |
    <a href="/admin/accounts/edit/<%= account.id %>">Edit</a>
  </td>
</tr>

<% end %>
</table>
